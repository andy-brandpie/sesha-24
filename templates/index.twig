{% extends "base.twig" %}

{% block content %}

	{% include "general/page-title.twig" with {'title' : title} %}

	<div class="container">
		<div class="flex flex-col gap-gutter / sm:grid sm:grid-cols-12">
		{% for post in posts %}
			<div class="sm:col-span-6 md:col-span-4 lg:col-span-3 mb-lg">
				{% include ['tease-'~post.post_type~'.twig'] with {
					'post' : post
				} %}
			</div>
		{% endfor %}
		</div>

		{% include 'components/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
	</div>

{% endblock %}
